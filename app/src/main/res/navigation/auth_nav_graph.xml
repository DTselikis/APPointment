<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.homelab.appointment.ui.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth">
        <deepLink
            android:id="@+id/deepLink"
            android:autoVerify="true"
            app:uri="homelab.page.link" />
        <action
            android:id="@+id/action_authFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.homelab.appointment.ui.hub.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_reAuthFragment"
            app:destination="@id/reAuthFragment" />
        <action
            android:id="@+id/action_profileFragment_to_verificationEmailDialogFragment"
            app:destination="@id/verificationEmailDialogFragment" />
    </fragment>
    <dialog
        android:id="@+id/reAuthFragment"
        android:name="com.homelab.appointment.ui.auth.reauth.ReAuthFragment"
        android:label="ReAuthFragment"
        tools:layout="@layout/fragment_re_auth">
        <argument
            android:name="email"
            app:argType="string" />
    </dialog>
    <dialog
        android:id="@+id/verificationEmailDialogFragment"
        android:name="com.homelab.appointment.ui.hub.profile.emailDialog.VerificationEmailDialogFragment"
        android:label="VerificationEmailDialogFragment" >
        <argument
            android:name="email"
            app:argType="string" />
    </dialog>
</navigation>